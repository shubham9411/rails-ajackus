<div class="container-contact100">
  <div class="wrap-contact100">
    <%= form_for @contact, html: { id: 'contact-form', class: 'contact100-form validate-form' } do |f|%>
    <span class="contact100-form-title"><%= t('.page_title') %></span>

    <label class="label-input100" for="first_name"><%= t('.name') %> *</label>
    <div class="wrap-input100 rs1-wrap-input100 validate-input" data-validate="<%= t('.field_warnings.first_name') %>">
      <%= f.text_field :first_name, class: 'input100', placeholder: t('activerecord.attributes.contact.first_name') %>
      <span class="focus-input100"></span>
    </div>
    <div class="wrap-input100 rs2-wrap-input100 validate-input" data-validate="<%= t('.field_warnings.last_name') %>">
      <%= f.text_field :last_name, class: 'input100', placeholder: t('activerecord.attributes.contact.last_name')  %>
      <span class="focus-input100"></span>
    </div>

    <label class="label-input100" for="email"><%= t('.email') %> *</label>
    <div class="wrap-input100 validate-input" data-validate="<%= t('.field_warnings.email') %>">
      <%= f.text_field :email, class: 'input100', placeholder: "#{t('global.eg')} example@email.com" %>
      <span class="focus-input100"></span>
    </div>

    <label class="label-input100" for="phone_number"><%= t('.phone_number') %></label>
    <div class="wrap-input100">
      <%= f.text_field :phone_number, class: 'input100', placeholder: "#{t('global.eg')} +1 800 000000" %>
      <span class="focus-input100"></span>
    </div>

    <label class="label-input100" for="message"><%= t('.message') %> *</label>
    <div class="wrap-input100 validate-input" data-validate="<%= t('.field_warnings.message') %>">
      <%= f.text_area :message, class: 'input100', placeholder: t('.message_placeholder') %>
      <span class="focus-input100"></span>
    </div>

    <div class="container-contact100-form-btn">
      <%= f.submit t('.submit'), class: 'contact100-form-btn' %>
    </div>
    <% end %>

    <div class="contact100-more flex-col-c-m" style="background-image: url('/assets/bg-01.jpg')">
      <div class="flex-w size1 p-b-47">
        <div class="txt1 p-r-25">
          <span class="lnr lnr-map-marker"></span>
        </div>
        <div class="flex-col size2">
          <span class="txt1 p-b-20"> <%= t('.address') %> </span>
          <span class="txt2">
            <%= t('.full_address') %>
          </span>
        </div>
      </div>
      <div class="dis-flex size1 p-b-47">
        <div class="txt1 p-r-25">
          <span class="lnr lnr-phone-handset"></span>
        </div>
        <div class="flex-col size2">
          <span class="txt1 p-b-20"> <%= t('.lets_talk') %> </span>
          <span class="txt3"> <%= t('.contact_number') %> </span>
        </div>
      </div>
      <div class="dis-flex size1 p-b-47">
        <div class="txt1 p-r-25">
          <span class="lnr lnr-envelope"></span>
        </div>
        <div class="flex-col size2">
          <span class="txt1 p-b-20"> <%= t('.support') %> </span>
          <span class="txt3"> contact@example.com </span>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="loader-wrapper" class=" loader-wrapper d-none">
  <div class="loader">
    <span></span>
    <span></span>
  </div>
</div>

<%= javascript_include_tag 'contact' %>